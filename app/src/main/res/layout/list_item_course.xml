<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/community_item_background">

    <!-- 강의 이름 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/courseNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/onemobile"
            android:text="강의 이름"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- 교수명 -->
        <TextView
            android:id="@+id/professorTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/onemobile"
            android:layout_weight="1"
            android:text="교수명"
            android:textSize="16sp"
            android:textColor="#0E0E0E"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- 나머지 항목들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">


        <!-- 학점 -->
        <TextView
            android:fontFamily="@font/onemobile"
            android:id="@+id/creditTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="학점"
            android:textSize="16sp"
            android:textColor="#1C1B1B"
            android:layout_marginStart="8dp"/>

        <!-- 학년 -->
        <TextView
            android:fontFamily="@font/onemobile"
            android:id="@+id/gradeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="학년"
            android:textSize="16sp"
            android:textColor="#040303"
            android:layout_marginStart="8dp"/>

        <TextView
            android:fontFamily="@font/onemobile"
            android:id="@+id/divisionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="구분"
            android:textSize="16sp"
            android:textColor="#100F0F"
            android:layout_marginStart="8dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <!-- 전공 -->
        <TextView
            android:fontFamily="@font/onemobile"
            android:id="@+id/majorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전공"
            android:textSize="16sp"
            android:textColor="#0C0C0C"/>

        <!-- 시간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/onemobile"
                android:id="@+id/timeTextView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="시간"
                android:textSize="16sp"
                android:textColor="#050505"
                android:layout_marginStart="8dp"/>
            <TextView
                android:fontFamily="@font/onemobile"
                android:id="@+id/timeTextView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="시간"
                android:textSize="16sp"
                android:textColor="#101010"
                android:layout_marginStart="8dp"/>

            <!-- 공간을 채우기 위한 빈 뷰 -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- 시간표에 추가하는 버튼 -->
            <Button
                android:fontFamily="@font/onemobile"
                android:id="@+id/addToTimetableButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/rectangle_173_color"
                android:text="시간표에 추가"
                android:textColor="#ECE6E6"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </LinearLayout>






</LinearLayout>
